{
  "openapi": "3.0.0",
  "info": {
    "title": "API de KALEV - Grupos",
    "description": "Documentación de la API para la gestión de grupos",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1/",
      "description": "Servidor local"
    }
  ],
  "tags": [
    {
      "name": "Grupos",
      "description": "Operaciones relacionadas con los grupos"
    },
    {
      "name": "Estudiantes",
      "description": "Operaciones relacionadas con los estudiantes"
    }
  ],
  "paths": {

    "/grupos": {
      "get": {
        "tags": ["Grupos"],
        "summary": "Obtener todos los grupos",
        "description": "Devuelve una lista de todos los grupos disponibles.",
        "responses": {
          "200": {
            "description": "Lista de grupos obtenida correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GrupoConDetalles"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "post": {
        "tags": ["Grupos"],
        "summary": "Crear un nuevo grupo",
        "description": "Permite a los administradores o docentes crear un grupo.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GrupoCreacion"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Grupo creado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Grupo"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/grupos/{id}": {
      "get": {
        "tags": ["Grupos"],
        "summary": "Obtener detalles de un grupo específico",
        "description": "Devuelve la información de un grupo a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del grupo a consultar",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Grupo obtenido correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GrupoConDetalles"
                }
              }
            }
          },
          "404": {
            "description": "Grupo no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "put": {
        "tags": ["Grupos"],
        "summary": "Actualizar un grupo existente",
        "description": "Permite actualizar la información de un grupo a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del grupo a actualizar",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GrupoActualizacion"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Grupo actualizado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Grupo"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "404": {
            "description": "Grupo no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "delete": {
        "tags": ["Grupos"],
        "summary": "Eliminar un grupo",
        "description": "Permite eliminar un grupo a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del grupo a eliminar",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Grupo eliminado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Grupo"
                }
              }
            }
          },
          "404": {
            "description": "Grupo no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/grupos/docente/{id_docente}": {
      "get": {
        "tags": ["Grupos"],
        "summary": "Obtener grupos por docente",
        "description": "Devuelve todos los grupos asignados a un docente específico.",
        "parameters": [
          {
            "name": "id_docente",
            "in": "path",
            "required": true,
            "description": "ID del docente",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Grupos obtenidos correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GrupoConDetalles"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Docente no encontrado o sin grupos asignados"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/grupos/director/{id_director}": {
      "get": {
        "tags": ["Grupos"],
        "summary": "Obtener grupos por director",
        "description": "Devuelve todos los grupos asignados a un director específico.",
        "parameters": [
          {
            "name": "id_director",
            "in": "path",
            "required": true,
            "description": "ID del director",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Grupos obtenidos correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GrupoConDetalles"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Director no encontrado o sin grupos asignados"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/grupos/grado/{grado}": {
      "get": {
        "tags": ["Grupos"],
        "summary": "Obtener grupos por grado",
        "description": "Devuelve todos los grupos de un grado específico.",
        "parameters": [
          {
            "name": "grado",
            "in": "path",
            "required": true,
            "description": "Grado escolar (ej. 6° Primaria)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Grupos obtenidos correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GrupoConDetalles"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No se encontraron grupos para el grado especificado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/estudiantes": {
      "get": {
        "tags": ["Estudiantes"],
        "summary": "Obtener todos los estudiantes",
        "description": "Devuelve una lista de todos los estudiantes disponibles ordenados por apellido paterno y nombre.",
        "responses": {
          "200": {
            "description": "Lista de estudiantes obtenida correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Estudiante"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "post": {
        "tags": ["Estudiantes"],
        "summary": "Crear un nuevo estudiante",
        "description": "Permite crear un nuevo estudiante.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EstudianteCreacion"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Estudiante creado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Estudiante"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/estudiantes/{id}": {
      "get": {
        "tags":["Estudiantes"],
        "summary": "Obtener detalles de un estudiante específico",
        "description": "Devuelve la información de un estudiante a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del estudiante a consultar",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Estudiante obtenido correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Estudiante"
                }
              }
            }
          },
          "404": {
            "description": "Estudiante no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "put": {
        "tags": ["Estudiantes"],
        "summary": "Actualizar un estudiante existente",
        "description": "Permite actualizar la información de un estudiante a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del estudiante a actualizar",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EstudianteActualizacion"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estudiante actualizado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Estudiante"
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "404": {
            "description": "Estudiante no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "delete": {
        "tags": ["Estudiantes"],
        "summary": "Eliminar un estudiante",
        "description": "Permite eliminar un estudiante a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del estudiante a eliminar",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Estudiante eliminado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Estudiante"
                }
              }
            }
          },
          "404": {
            "description": "Estudiante no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/estudiantes/grupo/{id_grupo}": {
      "get": {
        "tags": ["Estudiantes"],
        "summary": "Obtener estudiantes por grupo",
        "description": "Devuelve todos los estudiantes que pertenecen a un grupo específico.",
        "parameters": [
          {
            "name": "id_grupo",
            "in": "path",
            "required": true,
            "description": "ID del grupo",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Estudiantes obtenidos correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Estudiante"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Grupo no encontrado o sin estudiantes asignados"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GrupoConDetalles": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          },
          "grado": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "docente": {
            "$ref": "#/components/schemas/Usuario"
          },
          "director": {
            "$ref": "#/components/schemas/Usuario"
          },
          "estudiantes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Estudiante"
            }
          }
        }
      },
      "Grupo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          },
          "grado": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "id_docente": {
            "type": "integer"
          },
          "id_director": {
            "type": "integer"
          }
        }
      },
      "GrupoCreacion": {
        "type": "object",
        "required": ["nombre", "grado", "id_docente", "id_director"],
        "properties": {
          "nombre": {
            "type": "string"
          },
          "grado": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "id_docente": {
            "type": "integer"
          },
          "id_director": {
            "type": "integer"
          }
        }
      },
      "GrupoActualizacion": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          },
          "grado": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "id_docente": {
            "type": "integer"
          },
          "id_director": {
            "type": "integer"
          }
        }
      },
      "Estudiante": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          },
          "apellido_paterno": {
            "type": "string"
          },
          "apellido_materno": {
            "type": "string"
          },
          "fecha_nacimiento": {
            "type": "string",
            "format": "date"
          },
          "id_grupo": {
            "type": "integer"
          },
          "correo": {
            "type": "string",
            "format": "email"
          },
          "telefono": {
            "type": "string"
          }
        }
      },
      "EstudianteCreacion": {
        "type": "object",
        "required": ["nombre", "apellido_paterno", "id_grupo"],
        "properties": {
          "nombre": {
            "type": "string"
          },
          "apellido_paterno": {
            "type": "string"
          },
          "apellido_materno": {
            "type": "string"
          },
          "fecha_nacimiento": {
            "type": "string",
            "format": "date"
          },
          "id_grupo": {
            "type": "integer"
          },
          "correo": {
            "type": "string",
            "format": "email"
          },
          "telefono": {
            "type": "string"
          }
        }
      },
      "EstudianteActualizacion": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          },
          "apellido_paterno": {
            "type": "string"
          },
          "apellido_materno": {
            "type": "string"
          },
          "fecha_nacimiento": {
            "type": "string",
            "format": "date"
          },
          "id_grupo": {
            "type": "integer"
          },
          "correo": {
            "type": "string",
            "format": "email"
          },
          "telefono": {
            "type": "string"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          },
          "apellido_paterno": {
            "type": "string"
          },
          "apellido_materno": {
            "type": "string"
          },
          "correo": {
            "type": "string",
            "format": "email"
          },
          "rol": {
            "type": "string",
            "enum": ["docente", "director", "administrador"]
          }
        }
      }
    }
  }
}
