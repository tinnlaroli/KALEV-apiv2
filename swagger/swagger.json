          "Usuarios"
        ],
        "summary": "Registrar un nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": {
                    "type": "string"
                  },
                  "apellidos": {
                    "type": "string"
                  },
                  "correo": {
                    "type": "string"
                  },
                  "telefono": {
                    "type": "string"
                  },
                  "rol": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "nombre",
                  "apellidos",
                  "correo",
                  "telefono",
                  "rol",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado correctamente"
          },
          "400": {
            "description": "Error en validación"
          },
          "500": {
            "description": "Error interno"
          }
